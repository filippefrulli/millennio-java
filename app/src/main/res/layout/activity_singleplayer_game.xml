<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context="wunderlabs.com.Millennio.singleplayerGameActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/domanda">

        <RelativeLayout
            android:id="@+id/scoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/points"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="14dp"
                android:background="@drawable/white_border_small"
                android:fontFamily="serif"
                android:text="1000"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/score"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:text="0"
                android:gravity="center"
                android:textSize="26sp"
                android:padding="12dp"
                android:layout_alignParentEnd="true"
                />

            <Button
                android:id="@+id/exitButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/baseline_clear_white_24"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoreLayout"
            android:layout_marginTop="54dp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="serif"
            />

        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:weightSum="6"
            android:layout_below="@id/question"
            android:layout_marginTop="90dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/white_border">

            <EditText
                android:id="@+id/input"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:ems="15"
                android:textSize="30sp"
                android:maxLength="4"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/white"
                android:inputType="number"
                android:background="@android:color/transparent"
                />

            <Button
                android:id="@+id/submitButton"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="40dp"
                android:background="@mipmap/baseline_done_white_24"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
